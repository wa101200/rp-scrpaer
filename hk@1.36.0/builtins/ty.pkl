import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Python"
  description = "Fast Python type checker"
}
ty = new Config.Step {
  glob = List("**/*.py", "**/*.pyi")
  check = "ty check {{ files }}"
  tests {
    local const testMaker = new helpers.TestMaker { filename = "test.py" }
    ["check bad file"] = testMaker.checkFail("x: int = ''", 1)
    ["check good file"] = testMaker.checkPass("x: str = ''")
  }
}
