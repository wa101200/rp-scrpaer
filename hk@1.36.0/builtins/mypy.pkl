import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Python"
  description = "Static type checker for Python"
  project_indicators {
    new { file = "pyproject.toml"; contains = "mypy" }
  }
}
mypy = new Config.Step {
  glob = List("**/*.py", "**/*.pyi")
  check = "mypy {{ files }}"
  tests {
    local const testMaker = new helpers.TestMaker { filename = "test.py" }
    ["check bad file"] = testMaker.checkFail("x: int = ''", 1)
    ["check good file"] = testMaker.checkPass("x: str = ''")
  }
}
